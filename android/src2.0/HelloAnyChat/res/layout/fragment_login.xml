<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/icon_bg"
            android:layout_weight="1"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="登录"
                android:layout_marginTop="18dp"
        />

        <ImageView
                android:src="@drawable/icon_hello_anychat"
                android:layout_width="230dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:id="@+id/imageViews"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dip"
                        android:layout_marginRight="51dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:text="IP地址"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="46.67dp"
                        android:layout_marginLeft="36dip"
                        android:layout_marginRight="51dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@drawable/edit_bg"
                >

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:src="@drawable/icon_ip"/>

                    <EditText
                            android:id="@+id/mainUIEditIP"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="demo.anychat.cn"
                            android:textColorHint="#bfbfbf"
                            android:textColor="#333333"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:textSize="14sp"/>
                </LinearLayout>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dip"
                        android:layout_marginRight="51dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:text="端口"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="46.67dp"
                        android:layout_marginLeft="36dip"
                        android:layout_marginRight="51dp"
                        android:layout_marginTop="4dip"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@drawable/edit_bg">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:src="@drawable/icon_port"/>

                    <EditText
                            android:id="@+id/mainUIEditPort"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="8906"
                            android:inputType="number"
                            android:textColorHint="#bfbfbf"
                            android:textColor="#333333"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:textSize="14sp"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="2"
                    >

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="36dip"
                                android:layout_marginRight="51dp"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_marginBottom="4dp"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:text="用户名"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="46.67dp"
                                android:layout_marginLeft="36dip"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:background="@drawable/edit_bg"
                                android:orientation="horizontal">

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dip"
                                    android:layout_marginRight="10dip"
                                    android:src="@drawable/icon_user"/>
                            <EditText
                                    android:id="@+id/main_et_name"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:hint="请输入用户名"
                                    android:textColorHint="#bfbfbf"
                                    android:textColor="#333333"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="2"

                            android:layout_marginLeft="36dip"
                            android:layout_marginRight="51dp"
                    >

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_marginBottom="4dp"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:text="房间"/>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="46.67dp"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:background="@drawable/edit_bg"
                                android:orientation="horizontal">

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dip"
                                    android:layout_marginRight="10dip"
                                    android:src="@drawable/icon_room"/>

                            <EditText
                                    android:id="@+id/mainUIEditRoomID"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:hint="房间ID"
                                    android:inputType="number"
                                    android:textColorHint="#bfbfbf"
                                    android:textColor="#333333"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dip">

                    <Button
                            android:id="@+id/mainUIStartBtn"
                            android:layout_width="match_parent"
                            android:layout_height="46.67dp"
                            android:layout_marginLeft="38dp"
                            android:layout_marginRight="38dp"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_bg"
                            android:textColor="#FFFFFF"
                            android:textSize="19sp"
                            android:gravity="center"
                            android:text="登录"
                            android:textStyle="bold"
                            android:visibility="visible"/>

                    <Button
                            android:id="@+id/mainUILogoutBtn"
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:layout_marginLeft="38dp"
                            android:layout_marginRight="38dp"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_bg"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:textSize="19sp"
                            android:text="点击退出登录"
                            android:textStyle="bold"
                            android:visibility="gone"/>

                    <Button
                            android:id="@+id/mainUIWaitingBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_warting_01"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:visibility="gone"/>

                    <LinearLayout
                            android:id="@+id/waitingLayout"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:visibility="invisible"
                    >
                        <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="@android:style/Widget.ProgressBar.Large"
                        />
                    </LinearLayout>
                </FrameLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_width="0dp" android:layout_height="0dp"
                  android:focusable="true"
                  android:focusableInTouchMode="true"
    >
        <requestFocus/>

    </LinearLayout>
    <TextView
            android:id="@+id/mainUIbottomConnMsg"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Not connect to the server"
            android:textColor="#999999"/>

    <TextView
            android:id="@+id/mainUIbottomBuildMsg"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Not connect to 192.168.1.1"
            android:textColor="#999999"/>
</LinearLayout>