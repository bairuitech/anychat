<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/dialog_title" />

    <RelativeLayout
        android:id="@+id/layout_dialogcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:paddingBottom="5dip" >

        <TextView
            android:id="@+id/txt_dialog_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_call"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:layout_alignBottom="@+id/layout_dialogcontent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_dialog_prompt"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/call_btn_bg"
            android:text="@string/str_call"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>