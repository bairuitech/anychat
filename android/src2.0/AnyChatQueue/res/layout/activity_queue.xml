<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  	android:background="#FFFFFF">


	<ImageView
			android:id="@+id/icon_queue"
			android:layout_width="136dp"
			android:layout_height="136dp"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="60dp"
			android:background="@drawable/queue_icon"/>


    <TextView
        android:id="@+id/queue_show"
		android:layout_below="@+id/icon_queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:text="在您前面还有**多少人等待，请耐心等候..." />
		<TextView 
		    android:id="@+id/queue_time"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/queue_show"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="15dp"
		    android:text="something show "
		    android:textColor="#333333"
		    android:textSize="16sp"/>	
    
    <Button
        android:id="@+id/queue_btn"
        android:layout_width="192dp"
        android:layout_height="44dp"
        android:layout_below="@+id/queue_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:background="@drawable/btn_bg"
        android:textColor="#FFFFFF"
        android:text="结束排队" />

</RelativeLayout>
